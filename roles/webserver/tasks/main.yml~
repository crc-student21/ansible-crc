---
- name: 'Setup webserver package'
  yum:
    name: 'httpd'
    state: present

- name: 'Create index/html'
  template:
    src: "{{ role_path }}/templates/index.html"
    dest: '/var/www/html/index.html'

- name: 'Start http service (also add to enabled)'
  service:
    name: 'httpd'
    enabled: yes
    state: started
